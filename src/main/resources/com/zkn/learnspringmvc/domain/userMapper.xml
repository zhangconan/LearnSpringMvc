<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userMapper">

    <select id="" parameterType="int" resultType="userScope">
        select * from user where id = #{id}
    </select>

    <insert id="addUser" parameterType="userScope" useGeneratedKeys="true">
        insert user(user_name,pass_word,address) values (#{userName},#{passWord},#{address})
    </insert>

    <update id="updateUser" parameterType="userScope">
        update user
        <set>
          <if test="userName != null">user_name = #{userName} </if>
          <if test="passWord != null">pass_word = #{passWord} </if>
          <if test="pass_word != null">pass_word = #{pass_word} </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
      delete from user where id = #{id}
    </delete>


</mapper>

